{
  "name": "truth-agent",
  "version": "1.0.0",
  "description": "AI Agent with Truth Terminal aesthetics + Clawd personality - Multi-platform messaging gateway with LLM agent capabilities",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "truth-agent": "./moltbot.mjs",
    "clawd-agent": "./moltbot.mjs"
  },
  "scripts": {
    "dev": "node scripts/run-node.mjs",
    "start": "node scripts/run-node.mjs",
    "build": "pnpm run frontend:build && tsc",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "dev:all": "concurrently \"npm run frontend:dev\" \"npm run dev\""
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "dependencies": {
    "@mariozechner/pi-agent-core": "0.49.3",
    "@mariozechner/pi-ai": "0.49.3",
    "hono": "4.11.4",
    "ws": "8.19.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
